<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TestingSystem.View.ViewPopup.SavingTestPopup"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:model = "clr-namespace:TestingSystem.Model"
             xmlns:view ="clr-namespace:TestingSystem.View"
             xmlns:viewmodel ="clr-namespace:TestingSystem.ViewModel"
               CanBeDismissedByTappingOutsideOfPopup ="False"
               x:Name="popup">
    <Border
        Padding="0" HeightRequest="300"
           WidthRequest="500"
           Stroke="Transparent"
           BackgroundColor="#FFEAE7EC">
        <Border.StrokeShape>
            <RoundRectangle CornerRadius="20"/>
        </Border.StrokeShape>
        <Frame>
            <VerticalStackLayout>
                <Entry Text="{Binding NameTest}" Placeholder ="Название теста"/>
                <Entry Text="{Binding Category.NameCategory}" Placeholder ="Укажите к какой категории относится данный тест"/>
                <Button Text="Добавить" Command="{Binding AddCommand}" CommandParameter="{Binding Source={x:Reference popup}}"/>
            </VerticalStackLayout>
            
            
        </Frame>
    </Border>
</toolkit:Popup>