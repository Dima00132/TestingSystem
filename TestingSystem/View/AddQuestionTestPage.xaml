<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TestingSystem.View.AddQuestionTestPage"
             xmlns:model = "clr-namespace:TestingSystem.Model"
             xmlns:viewmodel ="clr-namespace:TestingSystem.ViewModel"
             Title="AddQuestionTestPage">
    <Grid ColumnDefinitions="*,300">
        <Grid Grid.Column="0">
            <ScrollView>
                <VerticalStackLayout>
                    <Frame>
                        <StackLayout>
                            <Editor Text="Вопрос"/>
                            <CollectionView ItemsSource="{Binding Question.AnswerOptions}">
                                <CollectionView.ItemTemplate>
                                    <DataTemplate x:DataType="{x:Type model:AnswerOption}">
                                        <Frame>
                                            <Grid ColumnDefinitions="*,50">
                                                <Editor Text="{Binding Answer}"/>
                                                <RadioButton IsChecked="{Binding IsCorrect}"/>
                                            </Grid>
                                        </Frame>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>
                            <Button Text="Add Answer Options" Command="{Binding AddAnswerOptionsCommand}"/>
                        </StackLayout>
                    </Frame>
                    <Button Text="Add" Command="{Binding AddQuestionTestCommand}"/>
                </VerticalStackLayout>
            </ScrollView>
        </Grid>
        <Grid Grid.Column="1">

            <ScrollView>
                <CollectionView ItemsSource="{Binding QuestionTests}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="{x:Type model:QuestionTest}">
                            <Frame>
                                <Label Text="{Binding Question}"/>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>

                </CollectionView>
            </ScrollView>
        </Grid>
    </Grid>
</ContentPage>